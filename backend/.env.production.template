# Production Environment Variables
# Copy to .env.production and fill in your values

# Database (from Supabase)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@YOUR_HOST.supabase.co:5432/postgres

# Redis (from Upstash)
REDIS_URL=redis://default:YOUR_TOKEN@YOUR_HOST.upstash.io:6379

# CORS (update after deploying)
STORE_CORS=https://your-vercel-url.vercel.app
ADMIN_CORS=https://your-render-url.onrender.com

# Secrets (generate random 32-character strings)
JWT_SECRET=change_this_to_random_32_characters
COOKIE_SECRET=change_this_to_random_32_characters

# Admin
MEDUSA_ADMIN_ONBOARDING_TYPE=default

# Optional
NODE_ENV=production
PORT=9000
